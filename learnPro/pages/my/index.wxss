/* pages/my/index.wxss */
.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.userinfo{
  display: flex;
  width: 750rpx;
  background-color: #e64340;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
}

.userinfo-avatarUrl{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.userinfo-nickname{
  color: #fff;
  margin-top: 20rpx;
}

.my-item{
  border-bottom: 1rpx solid #eee;
  margin: 20rpx 0; 
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 700rpx center;
  background-size: 16rpx auto,750rpx auto;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
}

.about{
    width: 100%;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 700rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
}

.version{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0 ;
  font-size: 25rpx;
}

