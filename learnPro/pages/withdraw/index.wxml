<!--pages/withdraw/index.wxml-->
<view class="container">
  <form bindsubmit="bindSave">
    <view class="form-box">
      <view class="row-warp">
        <view class="label">充值金额</view>
        <view class="label-right">
          <input type="number" class="input" placeholder="最少100元起" name="amount" />
        </view>
      </view>
    </view>
    <button type="warn" class='saveBtn' formType="submit">申请提现</button>
    <button type="default" class='cancelBtn' bindtap="cancelBtnTap">取消</button>
  </form>
</view>
